<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <top>
            <HBox prefHeight="37.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Number of Files: " />
                  <Text fx:id="numberOfFilesText" strokeType="OUTSIDE" strokeWidth="0.0" text="No File Selected" />
               </children>
            </HBox>
         </top>
         <bottom>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                <Button fx:id="refreshButton" mnemonicParsing="false" text="Refresh" />
              </items>
            </ToolBar>
         </bottom>
         <center>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Text fx:id="numberOfLinesText" strokeType="OUTSIDE" strokeWidth="0.0" text="No File Selected" GridPane.columnIndex="1" />
                        <Text fx:id="numberOfBlankLinesText" strokeType="OUTSIDE" strokeWidth="0.0" text="No File Selected" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Text fx:id="numberOfSpacesText" strokeType="OUTSIDE" strokeWidth="0.0" text="No File Selected" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Number of Lines: " wrapText="true" />
                        <Label text="Number of Blank Lines: " wrapText="true" GridPane.rowIndex="1" />
                        <Label text="Number of Spaces: " wrapText="true" GridPane.rowIndex="2" />
                     </children>
                  </GridPane>
                  <GridPane GridPane.columnIndex="1">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Text fx:id="charactersPerLineText" strokeType="OUTSIDE" strokeWidth="0.0" text="No File Selected" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Text fx:id="wordLengthText" strokeType="OUTSIDE" strokeWidth="0.0" text="No File Selected" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="Average Chacters per Line: " wrapText="true" GridPane.rowIndex="1" />
                        <Label text="Average Word Length: " wrapText="true" GridPane.rowIndex="2" />
                        <Label text="Number of Words: " />
                        <Text fx:id="numberOfWordsText" strokeType="OUTSIDE" strokeWidth="0.0" text="No File Selected" GridPane.columnIndex="1" />
                     </children>
                  </GridPane>
               </children>
            </GridPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
